  build-depends:       
    base >=4.4 && < 5
    , text >= 1.2 && < 1.3
    , time >= 1.5 && < 1.6
    , mtl >= 2.2 && < 2.3
    , containers >= 0.5 && < 0.6
    , distributed-process >= 0.7 && < 0.8
    , distributed-process-simplelocalnet >= 0.2  && < 0.3
    , distributed-static >= 0.3 && < 0.4
    , network >= 2.6 && < 2.7
    , network-transport >= 0.5 && < 0.6
    , network-transport-tcp >= 0.5 && < 0.7
    , binary >= 0.8.1.0 && < 0.9
    , exceptions >= 0.8 && < 0.9
    , template-haskell >= 2.9 && < 2.12
    , stm >= 2.4 && < 2.5
    , async >= 2.1 && < 2.2
    , haskeline >= 0.7 && < 0.8
    , conduit >= 1.2 && < 1.3
