  type:   exitcode-stdio-1.0
  build-depends: 
    base >= 4.7 && <  5
    , tasty >= 0.11 && < 0.12
    , tasty-hunit >= 0.9.1 && < 0.10
    , tasty-quickcheck >= 0.9.1 && < 0.10
    , tasty-smallcheck >= 0.8.1 && < 0.10
    , text >= 1.2 && < 1.3
    , distributed-process >= 0.7 && < 0.8
    , distributed-process-simplelocalnet >= 0.2  && < 0.3
    , distributed-static >= 0.3 && < 0.4
    , binary >= 0.8 && < 0.9
    , zya >= 0.1.0.1 && < 0.2
    , async >= 2.1 && < 2.2
    , conduit >= 1.2 && < 1.3
    , Crypto >= 4.2 && < 4.3
  hs-source-dirs: test
  default-language:   Haskell2010
  main-is : Tasty.hs
  build-tools : alex, happy